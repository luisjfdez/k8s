{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "apiProfile": "2018-03-01-hybrid",
    "parameters": {
        "names": {
            "type": "object",
            "metadata": {
                "description": "Names object from master template"
            }
        },
        "credentials": {
            "type": "secureObject",
            "metadata": {
                "description": "Secure credential object from master template"
            }
        },
        "config": {
            "type": "object",
            "metadata": {
                "description": "Config object from master template"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('names').vmMaster, copyIndex(1), '/config', copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "extensionsMasterLoop",
                "count": "[parameters('config').master.count]",
                "mode": "Serial",
                "batchSize": 1
            },
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[uri(parameters('config').artifactsLocation,'scripts/master.sh')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('/bin/bash master.sh ', copyIndex(1), ' ', parameters('credentials').guid, ' ',reference(concat('Microsoft.Network/publicIPAddresses/', parameters('names').lbPubIp), '2016-03-30').dnsSettings.fqdn, ' ', parameters('credentials').adminUsername)]"
                }
            }
        }        
    ],
    "outputs": {
    }
}